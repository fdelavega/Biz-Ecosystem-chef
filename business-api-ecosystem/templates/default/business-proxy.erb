#! /bin/bash
 
start() {
  WORKSPACE=`pwd`
  echo "Starting the Business Ecosystem Logic Proxy"

  cd /opt/biz-ecosystem/business-ecosystem-logic-proxy/  
  nohup /usr/local/bin/node server.js &>/dev/null &
  
  sleep 5
  # Ensure that the software is running
  exec 9<>/dev/tcp/localhost/<%= node[:biz][:port] %>
  status=$?

  while [[ $status -ne 0 && $i -lt 20 ]]; do
    echo "The logic proxy did not start..."
    sleep 1

    echo "Trying again"
    i=$i+1

    nohup /usr/local/bin/node server.js &>/dev/null &
    exec 9<>/dev/tcp/localhost/<%= node[:biz][:port] %>    
    status=$?
  done

  exec 9>&- # close output connection
  exec 9<&- # close input connection
  cd $WORKSPACE
}

stop() {
  for var in $(netstat -ntlp | grep <%= node[:biz][:port] %>); do pid=$var; done
  kill -9 $(echo $pid | cut -f1 -d/)  
}

case "$1" in
  start)
    start
    ;;
  restart)
    $0 stop
    $0 start
    ;;
  stop)
    stop
    ;;
  *)
    echo $"usage: $0 {start|stop|restart}"
    exit 3
    ;;
esac
:
